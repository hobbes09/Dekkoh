<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/answerCellLayoutUserAnswerFragmentLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/tile_zeropadding"
        >
        
        <ImageView 
            android:id="@+id/profileImageInAnswerCellUserAnswerFragmentLeft"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/errormap"
            android:layout_margin="10dp"
            />
        
        <TextView 
            android:id="@+id/userNameInAnswerCellUserAnswerFragmentLeft"
            android:layout_toRightOf="@id/profileImageInAnswerCellUserAnswerFragmentLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:gravity="left"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:textStyle="bold"
            />
        
        <TextView 
            android:id="@+id/answerInAnswerCellUserAnswerFragmentLeft"
            android:layout_below="@id/userNameInAnswerCellUserAnswerFragmentLeft"
            android:layout_toRightOf="@id/profileImageInAnswerCellUserAnswerFragmentLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer"
            android:gravity="left"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            />
        
        
    </RelativeLayout>
