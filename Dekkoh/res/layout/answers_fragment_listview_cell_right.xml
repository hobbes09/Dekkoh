<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/answerCellLayoutUserAnswerFragmentRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/tile_zeropadding"
        >
        
        <ImageView 
            android:id="@+id/profileImageInAnswerCellUserAnswerFragmentRight"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/errormap"
            android:layout_margin="10dp"
            />
        
        <TextView 
            android:id="@+id/answerInAnswerCellUserAnswerFragmentRight"
            android:layout_toLeftOf="@id/profileImageInAnswerCellUserAnswerFragmentRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer"
            android:gravity="right"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_centerInParent="true"
            />
        
        
    </RelativeLayout>
