<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layoutForAddressEditingByUserDekkohMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <ImageButton
            android:id="@+id/contiueButtonUserAddressChangeDekkohMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:padding="5dp"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:src="@drawable/ic_tick" />

        <EditText
            android:id="@+id/userAddressEditTextDekkohMapFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/contiueButtonUserAddressChangeDekkohMap"
            android:layout_alignTop="@id/contiueButtonUserAddressChangeDekkohMap"
            android:layout_toLeftOf="@id/contiueButtonUserAddressChangeDekkohMap"
            android:ems="10"
            android:hint="Enter Street,City,State"
            android:textColor="#000000" />
    </RelativeLayout>

    <com.google.android.gms.maps.MapView
        android:id="@+id/dekkohMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>